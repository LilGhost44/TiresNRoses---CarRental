<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" alignment="CENTER"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controller.CreateCompanyController">

    <Label text="Create Company" style="-fx-font-size: 16px;" />

    <TextField fx:id="companyNameField" promptText="Name"/>
    <TextField fx:id="companyIdField" promptText="ID"/>

    <Button text="Submit" onAction="#handleSubmit"/>
    <Button text="Back" onAction="#handleBack"/>

</VBox>
